{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "styled/*": ["src/styled/*"],
      "pages/*": ["src/pages/*"],
      "helpers/*": ["src/helpers/*"],
      "providers/*": ["src/providers/*"],
    }
  },
  
  "include": ["./src/**/*", "./env.d.ts"]
}